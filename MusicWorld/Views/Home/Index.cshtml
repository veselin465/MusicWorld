@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (this.User.Identity.IsAuthenticated)
    {
        <h3> You are Authenticated (logged in) </h3>
    }
    else
    {
        <h3> You are not Authenticated (not logged in) </h3>
    }

    @if (this.User.IsInRole("Admin"))
    {
        <h3> You are Authorized (Role = ADMIN) </h3>
    }
    else
    @if (this.User.IsInRole("User"))
    {
        <h3> You are Authorized (Role = USER) </h3>
    }
    else
    {
        <h3> Your Authorization (role) cannot be found </h3>
        <h3>(You are Anonymous until you log in)</h3>
    }

    @if (this.User.Identity.Name != null)
    {
        <h3> Your database name is @this.User.Identity.Name </h3>
    }

    @if (this.User.Identity.AuthenticationType != null)
    {

        <h3> Your Authentication type is @this.User.Identity.AuthenticationType  </h3>
        <h5>(If you used Facebook Authentication, for example, it would have been different)</h5>
    }

</div>
