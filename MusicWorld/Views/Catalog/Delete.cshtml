@model MusicWorld.Models.Catalogs.CatalogsDetailViewModel

@{
    ViewData["Title"] = "Delete catalog";
}

<h3>Are you sure you want to delete this catalog?</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatalogInformation.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatalogInformation.Name)
        </dd>
        <dt class="col-sm-2">
            Created by
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatalogInformation.MyUserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CatalogInformation.Descritpion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CatalogInformation.Descritpion)
        </dd>
        <dt class="col-sm-2">
            Songs:
        </dt>
        <dd class="col-sm-10">
            @foreach (var song in Model.CurrentCatalogSongs)
            {
                <p>@song.Name (@song.Duration min) - by @song.PerformerName</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.CatalogInformation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger font-weight-bold mr-3 p-2" />
        <a type="submit" asp-action="Index" class="btn btn-info p-2">Cancel</a>
    </form>
</div>
